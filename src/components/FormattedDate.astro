---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"time"> {
	date: Date;
}

const { date, class: className, ...props } = Astro.props;
---

<time datetime={date.toISOString()} class={className} {...props}>
	{
		date.toLocaleDateString("en-us", {
			year: "numeric",
			month: "short",
			day: "numeric",
		})
	}
</time>
